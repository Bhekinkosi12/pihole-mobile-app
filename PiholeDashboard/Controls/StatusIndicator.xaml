<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PiholeDashboard.Controls.StatusIndicator">
    <ContentView.Content>
        <AbsoluteLayout x:Name="_context" Padding="0,2,0,0">
            
            <Button x:Name="BG"  HorizontalOptions="Center" CornerRadius="15"  WidthRequest="30" HeightRequest="30" BackgroundColor="{Binding Status}" Clicked="Interact_Clicked" />
        </AbsoluteLayout>
    </ContentView.Content>
</ContentView>
